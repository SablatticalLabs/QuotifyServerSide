<p id="notice"><%= notice %></p>

<p>
  <b>Quote text:</b>
  <%= @quote.quote_text %>
</p>

<p>
  <b>Quote time:</b>
  <%= @quote.quote_time %>
</p>

<p>
  <b>Quote speaker:</b>
  <%= @quote.speaker.name %>
</p>

<p>
  <b>Quote quotifier</b>
  <%= @quote.quotifier.name %>
</p>

<p>
  <b>Quote witnesses</b><br/>
  <% @quote.witnesses.each do |witness| %> 
    <%= "#{witness[:name]} (#{witness[:email]},#{witness[:phone]})" %><br/>
  <% end %>

<p>
<b>Quote Image</b><br/>
<% unless @quote.quote_images.blank? %> 
  <%= image_tag "/quote_images/#{@quote.quote_images.first.file_name}" %>
<% end %>
</p>




<h1>Listing quotes</h1>

<table style="border='1px'">
  <tr>
    <th>ID</th>
    <th>Quote text</th>
    <th>Quote time</th>
    <th>Speaker</th>
    <th>Quotifier</th>
    <th>Witnesses</th>
    <th>Location</th>
    <th>Coordinates</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @quotes.each do |quote| %>
  <tr>
    <td><%= quote.id %></td>
    <td><%= quote.quote_text %></td>
    <td><%= quote.quote_time %></td>
    <td><%= "#{quote.speaker.name} (#{quote.speaker.email},#{quote.speaker.phone})" %></td>
    <td><%= "#{quote.quotifier.name} (#{quote.quotifier.email},#{quote.quotifier.phone})" %></td>
    <td><%= quote.witnesses.inject("") {|memo, cur| "#{memo}; #{cur[:name]} (#{cur[:email]},#{cur[:phone]})" } [2..5000] %>
    <td><%= quote.location %></td>
    <td><%= quote.coordinate %></td>
    <td><%= link_to 'Show', quote %></td>
    <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
    <td><%= link_to 'Destroy', quote, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Quote', new_quote_path %>
